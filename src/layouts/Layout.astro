=---
interface Props {
  title?: string; // Optional with default fallback
  description?: string;
}

const { 
  title = "Hayden Cordeiro | Senior Full Stack Engineer | Toronto",
  description = "Senior Full Stack Developer at RBC specializing in High-Performance Web Architecture (Nuxt.js), Python, and Enterprise AI Integration. Based in Toronto, Canada."
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || "https://hayden.co.in");
---
<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="sitemap" href="/sitemap-index.xml" />
  <link rel="canonical" href={canonicalURL} />

  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <meta name="theme-color" content="#317EFB"/>
  <meta name="robots" content="index, follow">
  <meta name="language" content="English">
  <meta name="author" content="Hayden Cordeiro">

  <title>{title}</title>
  <meta name="title" content={title}>
  <meta name="description" content={description} />
  <meta name="keywords" content="Hayden Cordeiro, Senior Full Stack Developer, Software Engineer Toronto, RBC, Nuxt.js, AI Agents, Python, Django, Accessibility, Web Architecture">

  <meta property="og:type" content="website">
  <meta property="og:url" content="https://hayden.co.in/">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content="https://ik.imagekit.io/haydencordeiro/New%20Website%20Assets/HaydenCordeiro.png">

  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content="https://hayden.co.in/">
  <meta property="twitter:title" content={title}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content="https://ik.imagekit.io/haydencordeiro/New%20Website%20Assets/HaydenCordeiro.png">

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Hayden Cordeiro",
      "url": "https://hayden.co.in",
      "image": "https://ik.imagekit.io/haydencordeiro/New%20Website%20Assets/HaydenCordeiro.png",
      "jobTitle": "Senior Full Stack Developer",
      "worksFor": {
        "@type": "Organization",
        "name": "Royal Bank of Canada (RBC)"
      },
      "alumniOf": {
        "@type": "CollegeOrUniversity",
        "name": "University of Windsor"
      },
      "sameAs": [
        "https://www.linkedin.com/in/haydencordeiro",
        "https://github.com/haydencordeiro",
        "https://twitter.com/haydencordeiro"
      ],
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Toronto",
        "addressRegion": "ON",
        "addressCountry": "Canada"
      }
    }
  </script>

  <link href="/assets/img/favicon.webp" rel="icon">
  <link href="/assets/img/apple-touch-icon.webp" rel="apple-touch-icon">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i&display=swap" rel="stylesheet">

  <script async src="https://www.googletagmanager.com/gtag/js?id=G-Y1TDP7H5C6"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-Y1TDP7H5C6');
  </script>

  <script async src="https://kit.fontawesome.com/7c0dadb601.js" crossorigin="anonymous"></script>
  <link href="/assets/css/style.css" rel="stylesheet">

</head>

<slot></slot>

</html>